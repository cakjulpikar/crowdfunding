<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include ./partial/header.ejs %>
    <h1>Campaign detail for <%= campaign.title %></h1>
  </body>
    <div class="">
      <p>Title: <%-campaign.title%></p>
      <p>Goal: Rp <%-campaign.goal%></p>
      <a href="/users/<%=campaign.starter_id%>">Starter: <%-campaign.User.username%></a><br>
      <p>Current fund: <%-sumAmount(campaign.Donations)%></p>
      <p><%-campaign.desc%></p>
      <%if(session && session.id==campaign.starter_id){%>
        <a href="/campaign/edit/<%=campaign.id%>">Edit</a>
      <%}%>
    </div>
  <%- include ./partial/footer.ejs %>
</html>
